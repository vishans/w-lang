-
    var chaptersList = ['An overview', 'The meta clause', 'Variables'];


mixin listChapters (chapterInQuestion)
    ul
        for chapter of chaptersList 
            if chapter == chapterInQuestion
                a(href=getValidID(chapter)+".html") 
                    li(current)= chapter
                #sub-list
            else
                a(href=getValidID(chapter)+".html") 
                    li= chapter